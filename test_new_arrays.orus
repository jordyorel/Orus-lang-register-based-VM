// Test the new modern array implementation
// This demonstrates the core array functionality that has been reimplemented

fn main() {
    // Create an array with literal syntax (this uses the existing parser)
    let arr: [i32] = [1, 2, 3]
    
    // Test array length
    print("Array: ")
    print(arr)
    print("Length: ")
    print(len(arr))
    
    // Test array indexing (with new bounds checking and negative index support)
    print("First element: ")
    print(arr[0])
    print("Last element (negative indexing): ")
    print(arr[-1])
    
    // Test array modification
    arr[1] = 42
    print("After modification: ")
    print(arr)
    
    // Test array push (dynamic growth)
    arr.push(4)
    arr.push(5)
    print("After push operations: ")
    print(arr)
    print("New length: ")
    print(len(arr))
    
    // Test array pop
    let popped = arr.pop()
    print("Popped value: ")
    print(popped)
    print("Array after pop: ")
    print(arr)
    
    print("Array implementation successfully redesigned!")
}