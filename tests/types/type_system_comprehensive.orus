fn main() {
    let x = 5               // x: i32 (default for small numbers)
    let y: i64 = 10         // y: i64 (explicitly declared)
    let z = 3000000000      // z: i64 (large number, auto-inferred)
    let w = 0x10u           // w: u32 (unsigned suffix)
    
    print("Testing Orus type system:")
    print("x =")
    print(x)
    print("type of x:")
    print(type_of(x))
    
    print("y =")
    print(y)
    print("type of y: {}", type_of(y))
    print(type_of(y))
    
    print("z =")
    print(z)
    print("type of z:")
    print(type_of(z))
    
    print("w =")
    print(w)
    print("type of w:")
    print(type_of(w))
}