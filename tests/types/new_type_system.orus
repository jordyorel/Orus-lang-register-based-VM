fn main() {
    // Test default type inference (should be i32 now)
    let a = 5
    print("a (default) =")
    print(a)
    print("type of a:")
    print(type_of(a))
    
    // Test explicit type suffixes
    let b = 10i64
    print("b (10i64) =")
    print(b)
    print("type of b:")
    print(type_of(b))
    
    let c = 15i32
    print("c (15i32) =")
    print(c)
    print("type of c:")
    print(type_of(c))
    
    let d = 20u32
    print("d (20u32) =")
    print(d)
    print("type of d:")
    print(type_of(d))
    
    let e = 25u64
    print("e (25u64) =")
    print(e)
    print("type of e:")
    print(type_of(e))
    
    // Test that large numbers still auto-promote to i64
    let f = 3000000000
    print("f (large number) =")
    print(f)
    print("type of f:")
    print(type_of(f))
}