fn main() {
    // Test hexadecimal with suffixes
    let hex_i32 = 0xFFi32
    print("hex_i32 type:")
    print(type_of(hex_i32))
    
    let hex_u64 = 0x123456789ABCDEFu64
    print("hex_u64 type:")
    print(type_of(hex_u64))
    
    // Test edge values
    let max_i32 = 2147483647i32
    print("max_i32 type:")
    print(type_of(max_i32))
    
    // Test that float suffix works
    let float_val = 42.5f64
    print("float_val type:")
    print(type_of(float_val))
}