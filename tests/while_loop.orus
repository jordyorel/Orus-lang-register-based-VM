// Test while loop

print("===== WHILE LOOP TEST =====")

let i = 0
while i < 5 {
    print("Loop iteration:")
    print(i)
    i = i + 1
}

print("After loop, i =")
print(i)

// Nested while loops
print("===== NESTED WHILE LOOPS =====")

let outer = 0
while outer < 3 {
    print("Outer loop:")
    print(outer)
    
    let inner = 0
    while inner < 2 {
        print("  Inner loop:")
        print(inner)
        inner = inner + 1
    }
    
    outer = outer + 1
}

print("===== TEST COMPLETE =====")
