// Basic enum test - unit variants only
enum Color {
    Red,
    Green,
    Blue
}

fn main() {
    let red = Color.Red
    let green = Color.Green
    let blue = Color.Blue
    
    print("red variant: {}", red)
    print("green variant: {}", green)
    print("blue variant: {}", blue)
    
    // Test enum checking
    if red == Color.Red {
        print("red is Red - correct!")
    } else {
        print("red is not Red - error!")
    }
    
    if green == Color.Blue {
        print("green is Blue - error!")
    } else {
        print("green is not Blue - correct!")
    }
}