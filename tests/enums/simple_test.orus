// Simple test for enum-related functionality
fn main() {
    // Test basic value types that could represent enum variants
    let red = 0
    let green = 1
    let blue = 2
    
    print("Testing enum-like values:")
    print("Red: {}", red)
    print("Green: {}", green) 
    print("Blue: {}", blue)
    
    // Test comparison (enum checking simulation)
    if red == 0 {
        print("Red variant matches!")
    }
    
    if green != blue {
        print("Different variants work!")
    }
    
    // Test with string type names
    let circle_type = "Circle"
    let radius = 5.0
    
    print("Shape test:")
    print("Type: {}", circle_type)
    print("Radius: {}", radius)
}