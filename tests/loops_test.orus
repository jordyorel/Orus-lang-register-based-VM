// Comprehensive test of the Orus language loops
// Tests while and for loops

print("===== WHILE LOOPS =====")
let i = 0
print("Counting from 0 to 4:")
while i < 5 {
    print(i)
    i = i + 1
}

print("===== NESTED WHILE LOOPS =====")
let outer = 0
while outer < 3 {
    print("Outer loop:")
    print(outer)
    
    let inner = 0
    while inner < 2 {
        print("  Inner loop:")
        print(inner)
        inner = inner + 1
    }
    
    outer = outer + 1
}

print("===== FOR LOOPS =====")
print("Counting from 0 to 4:")
for j in 0..5 {
    print(j)
}

print("===== FOR LOOPS WITH EXPRESSIONS =====")
let start = 1
let end = 4
print("Counting from 1 to 3:")
for k in start..end {
    print(k)
}

print("===== NESTED FOR LOOPS =====")
for x in 0..3 {
    print("Outer loop:")
    print(x)
    
    for y in 0..2 {
        print("  Inner loop:")
        print(y)
    }
}

print("===== WHILE LOOP WITH IF STATEMENT =====")
let counter = 0
while counter < 10 {
    if counter % 2 == 0 {
        print("Even number:")
        print(counter)
    } else {
        print("Odd number:")
        print(counter)
    }
    counter = counter + 1
}

print("===== FOR LOOP WITH IF STATEMENT =====")
for n in 0..5 {
    if n > 2 {
        print("Greater than 2:")
        print(n)
    } else {
        print("Less than or equal to 2:")
        print(n)
    }
}

print("===== TEST COMPLETE =====")
