// Test if statements

// Simple if statement
let a = 5
if a > 3 {
    print("a is greater than 3")
}

// If-else statement
let b = 2
if b > 3 {
    print("b is greater than 3")
} else {
    print("b is not greater than 3")
}

// If-elif-else statement
let c = 5
if c > 10 {
    print("c is greater than 10")
} elif c > 5 {
    print("c is greater than 5")
} elif c == 5 {
    print("c is equal to 5")
} else {
    print("c is less than 5")
}

// Nested if statements
let d = 7
if d > 5 {
    print("d is greater than 5")
    if d > 10 {
        print("d is greater than 10")
    } else {
        print("d is between 5 and 10")
    }
}
