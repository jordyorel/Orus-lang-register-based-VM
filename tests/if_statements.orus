// Test if statements
// This file uses only newlines as statement terminators

// Simple if statement
print("===== Simple If Statement =====")
let a = true
if a {
    print("a is true")
}

// If-else statement
print("===== If-Else Statement =====")
let b = false
if b {
    print("b is true")
} else {
    print("b is false")
}

// If-elif-else statement
print("===== If-Elif-Else Statement =====")
let c = 42
let d = 10
if c < d {
    print("c is less than d")
} elif c > d {
    print("c is greater than d")
} else {
    print("c is equal to d")
}

// Multiple elif branches
print("===== Multiple Elif Branches =====")
let grade = 85
if grade >= 90 {
    print("A")
} elif grade >= 80 {
    print("B")
} elif grade >= 70 {
    print("C")
} elif grade >= 60 {
    print("D")
} else {
    print("F")
}

// Nested if statements
print("===== Nested If Statements =====")
let x = 10
let y = 20
if x < y {
    print("x is less than y")
    if x < 5 {
        print("x is less than 5")
    } else {
        print("x is greater than or equal to 5")
    }
}

// End of test
print("===== Test Complete =====")
