// Basic for loop test file
// This file tests basic for loop functionality

// Test a basic for loop that sums numbers from 0 to 4
fn test_basic_for_loop() -> i32 {
    let sum = 0
    for i in 0..5 {
        sum = sum + i
    }
    return sum  // Should return 10 (0+1+2+3+4)
}

// Test a single loop incrementing a variable
fn test_single_loop() -> i32 {
    let count = 0
    for i in 0..3 {
        count = count + 1
    }
    return count  // Should return 3
}

// Single directly executable function that runs all tests
fn run_tests() -> i32 {
    print("Running simplified for loop tests")
    
    let result = test_basic_for_loop()
    print("Basic for loop result:")
    print(result)  // Should print 10
    
    let count_result = test_single_loop()
    print("Single loop count:")
    print(count_result)  // Should print 3
    
    return 0
}