// Test current is_type functionality
fn main() {
    print("=== Type Checking Test ===")
    
    // Test basic type checking
    let num = 42
    let text = "hello"
    let flag = true
    let arr = [1, 2, 3]
    
    print("is_type(42, \"i32\") = {}", is_type(num, "i32"))
    print("is_type(\"hello\", \"string\") = {}", is_type(text, "string"))
